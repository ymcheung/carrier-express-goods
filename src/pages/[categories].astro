---
import { SITENAME, categories } from '../../constants';
// import { getCollection } from 'astro:content';
import Layout from '@layouts/Categories.astro';
import 'node_modules/normalize.css/normalize.css';
import '@styles/global.scss';
import '@fontsource-variable/rubik';

import SlugNavigation from '@components/navigation/Slugs.astro';

export async function getStaticPaths() {
  return categories.map(({ name, label }) => ({
    params: { categories: name },
    props: { name, label }
  }));
}

type Props = { name: (typeof categories)[number]['name']; label: string };
const { name: categoryName, label } = Astro.props as Props;

const pageTitle = `${label}${SITENAME}`;
const description = '蒐集以貓為主題的生活物品。更棒的是，會有驚喜感。';
const dateModified = '2023-07-23T17:10:00+08:00';
const datePublished = '2021-08-11T00:00:00+08:00';
---

<Layout
  title={pageTitle}
  description={description}
  dateModified={dateModified}
  datePublished={datePublished}
>
  <SlugNavigation categoryName={categoryName} />
  <div>
    <div class='syllabus'>
      <h1>{pageTitle}</h1>
    </div>
  </div>
</Layout>

<style lang='scss'>
  .syllabus {
    max-width: 672px;
    margin-inline: auto;

    @media screen and (min-width: 992px) {
      padding-block-start: 2.4rem;
      padding-inline: 1.6rem;
    }

    :global(p) {
      margin-block-start: 0;
      color: var(--color-shade25);
      font-size: clamp(1.8rem, 1.125vw + 1rem, 2.2rem);
      line-height: 1.5;
    }
  }

  h1 {
    margin-block: 0 1.6rem;
    color: var(--color-shade25);
    font-size: 3.2rem;
  }
</style>
