---
import { categories } from '../../../constants';
import { getCollection } from 'astro:content';

const { slug: slugName } = Astro.params;

type Props = { categoryName: (typeof categories)[number]['name'] };
const { categoryName } = Astro.props as Props;

const slugItems = await getCollection(categoryName);
---

<nav>
  <ul class='list'>
    {
      slugItems.map(({ slug, data }) => (
        <li class={`listItem${slug === slugName ? ' isActive' : ''}`}>
          <a class='link' href={`/${categoryName}/${slug}`}>
            {data.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang='scss'>
  nav {
    margin-inline: -1.6rem;
    // padding-inline-start: 1.6rem;
    border-bottom: 1px solid var(--colorShade92);

    @media screen and (min-width: 992px) {
      margin-inline: 0;
      padding-inline-end: 1.6rem;
      border-right: 1px solid var(--colorShade92);
      border-bottom: none;
    }
  }

  .list {
    display: grid;
    grid: auto-flow auto / repeat(2, 240px);
    gap: 1.2rem;
    max-height: 25vh;
    overflow-x: auto;
    margin-block: 0;
    padding-inline-start: 1.6rem;
    padding-block-end: 1.2rem;

    @media screen and (min-width: 992px) {
      grid: auto-flow / 240px;
      max-height: none;
      overflow-x: initial;
      overflow-y: auto;
      padding-block-start: 1.6rem;
      padding-block-end: 0;
    }
  }

  .listItem {
    padding-inline: 0.8rem;
    list-style-type: none;
    border-radius: 0.6rem;

    &.isActive {
      background-color: var(--colorShade96);

      .link {
        pointer-events: none;
      }
    }
  }

  .link {
    display: block;
    margin-inline: -0.8rem;
    padding: 0.8rem;
    color: var(--colorShade40);
    font-size: 1.6rem;
    line-height: 1.5;
    text-decoration: none;

    @media screen and (min-width: 992px) {
      margin-inline: 0;
      padding: 0.8rem 0;
    }
  }
</style>
