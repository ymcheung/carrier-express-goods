---
import { categories } from '../../../constants';

const { categories: categoryName } = Astro.params;
---

<nav>
  <ul class='list'>
    {
      categories.map(({ name, label }) => (
        <li class={`listItem${name === categoryName ? ' isActive' : ''}`}>
          <a class='link' href={`/${name}`}>
            {label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang='scss'>
  // .nav {
  // margin-block-end: 1.5rem;
  // padding-inline-start: 1rem;
  // padding-inline-end: 1rem;
  // }

  .list {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: minmax(max-content, auto);
    gap: 1.2rem;
    margin-block: 0;
    padding-inline-start: 1.6rem;
    padding-inline-end: 1.6rem;
    padding-block: 1.2rem;
    overflow-x: auto;

    @media screen and (min-width: 992px) {
      grid-auto-flow: row;
    }
  }

  .listItem {
    margin-inline-start: -0.8rem;
    padding-block: 0.6rem;
    padding-inline-start: 0.8rem;
    list-style-type: none;
    border-radius: 0.6rem;
    border-width: 2px;
    border-style: solid;
    border-color: transparent;

    &:hover {
      border-color: var(--color-shade92);
    }

    &.isActive {
      background-color: var(--color-shade92);
      border-color: var(--color-shade92);

      .link {
        pointer-events: none;
      }
    }
  }

  .link {
    display: inline-block;
    padding-block: 0.6rem;
    padding-inline-end: 0.8rem;
    color: var(--color-shade40);
    font-size: 2rem;
    text-decoration: none;
  }
</style>
